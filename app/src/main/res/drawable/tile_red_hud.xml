<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonRedDark" />
            <corners android:radius="@dimen/panel_border_outer_radius" />
            <padding
                android:top="@dimen/panel_border_outer_padding"
                android:right="@dimen/panel_border_outer_padding"
                android:bottom="@dimen/panel_border_outer_padding"
                android:left="@dimen/panel_border_outer_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonRedStartGradient" />
            <corners android:radius="@dimen/panel_border_mid_radius" />
            <padding
                android:top="@dimen/panel_border_mid_padding"
                android:right="@dimen/panel_border_mid_padding"
                android:bottom="@dimen/panel_border_mid_padding"
                android:left="@dimen/panel_border_mid_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonRedEndGradient" />
            <corners android:radius="@dimen/panel_border_inner_radius" />
            <padding
                android:top="@dimen/panel_border_inner_padding_small_extra"
                android:right="@dimen/panel_border_inner_padding_small_extra"
                android:bottom="@dimen/panel_border_inner_padding_small_extra"
                android:left="@dimen/panel_border_inner_padding_small_extra" />
        </shape>
    </item>
</layer-list>