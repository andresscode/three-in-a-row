    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/panelGreyMain" />
            <corners android:radius="@dimen/panel_border_inner_radius" />
            <padding
                android:top="@dimen/panel_border_inner_padding_small"
                android:right="@dimen/panel_border_inner_padding_small"
                android:bottom="@dimen/panel_border_inner_padding_small"
                android:left="@dimen/panel_border_inner_padding_small" />
