<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/panelBlueDark" />
            <corners
                android:topLeftRadius="@dimen/panel_border_outer_radius"
                android:topRightRadius="@dimen/panel_border_outer_radius"/>
            <padding
                android:top="@dimen/panel_border_outer_padding"
                android:right="@dimen/panel_border_outer_padding"
                android:left="@dimen/panel_border_outer_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/panelBlueLight" />
            <corners
                android:topLeftRadius="@dimen/panel_border_mid_radius"
                android:topRightRadius="@dimen/panel_border_mid_radius"/>
            <padding
                android:top="@dimen/panel_border_mid_padding"
                android:right="@dimen/panel_border_mid_padding"
                android:left="@dimen/panel_border_mid_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/panelBlueMain" />
            <corners
                android:topLeftRadius="@dimen/panel_border_inner_radius"
                android:topRightRadius="@dimen/panel_border_inner_radius"/>
            <padding
                android:top="@dimen/button_border_inner_padding"
                android:right="@dimen/button_border_inner_padding"
                android:bottom="@dimen/button_border_inner_padding"
                android:left="@dimen/button_border_inner_padding" />
        </shape>
    </item>
</layer-list>